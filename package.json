{
  "name": "electron-template",
  "version": "1.0.0",
  "main": "dist/main.js",
  "description": "Wish you the very best of everyday.",
  "private": true,
  "author": "Spike Chen<cys19970903@gmail.com>",
  "scripts": {
    "dev": "rimraf dist && run-p dev:renderer dev:main dev:electron",
    "build": "rimraf dist && run-p build:renderer build:electron",
    "package": "yarn build && ts-node builder.ts",
    "dev:renderer": "cross-env NODE_ENV=development webpack serve --config config/webpack.renderer.ts",
    "dev:main": "cross-env NODE_ENV=development webpack --config config/webpack.main.ts",
    "dev:electron": "wait-on ./dist/main.js && electron .",
    "build:renderer": "cross-env NODE_ENV=production webpack --config config/webpack.renderer.ts",
    "build:electron": "cross-env NODE_ENV=production webpack --config config/webpack.main.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "eslint . --ignore-path .eslintignore",
    "fix": "eslint --fix . --ignore-path .eslintignore",
    "preview": "yarn build && electron .",
    "preinstall": "node -e \"if(!process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('必需使用YARN安装依赖包，请勿使用npm install')\""
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@types/node": "^18.14.6",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "electron": "^24.1.3",
    "electron-builder": "^23.6.0",
    "eslint-config-bebop": "^1.0.3",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "html-webpack-plugin": "^5.5.0",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "mini-css-extract-plugin": "^2.7.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "style-loader": "^3.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "wait-on": "^7.0.1",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0",
    "webpackbar": "^5.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
